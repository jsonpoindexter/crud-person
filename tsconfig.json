{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true, // required by typeorm
    "experimentalDecorators": true, // required by typeorm
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "./test/",
    "./node_modules",
    "./dist/"
  ]
}
